<div class="card">
    <div class="card-body">
       <h4 class="card-title"><a class="link" href="/post/{{id}}">{{title}}</a></h4>
        <p>Created by {{user.username}} on {{format_date date_created}}</p>
    </div>
        <p class="card-text">{{content}}</p>
        {{#if comments}} 
        <h1>Comments:</h1>
        {{/if}}
        {{#each comments as |comment|}}
        <div>
           <p>{{comment.comment_text}}</p>
           <p>{{comment.user.username}} {{format_date comment.createdAt}}</p>
        </div>
        {{/each}}
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Comment:</h3>
    <form class="form new-post-form">
      <div class="form-group">
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="button" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

<script src="/js/comment.js"></script>